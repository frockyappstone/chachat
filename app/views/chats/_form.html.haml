= form_for(@chat) do |f|
  - if @chat.errors.any?
    #error_explanation
      %h2
        = pluralize(@chat.errors.count, "error")
        prohibited this chat from being saved:
      %ul
        - @chat.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :sender
    %br/
    = f.text_field :sender
  .field
    = f.label :body
    %br/
    = f.text_field :body
  .actions
    = f.submit
